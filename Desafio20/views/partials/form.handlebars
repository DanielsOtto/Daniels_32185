<h1 class="h1">Ingrese los datos del producto</h1>

<form method="post" action="/products">
    <div class="mb-4">
        <label class="col-form-label" for="name">Ingrese el nombre del producto</label>
        <input id="inputName" class="form-control" type="text" name="name" required>
    </div>
    <div class="mb-4">
        <label class="col-form-label" for="price">Ingrese el precio del producto</label>
        <input id="inputPrice" class="form-control" type="number" name="price" required>
    </div>
    <div class="mb-4">
        <label class="col-form-label" for="description">Ingrese la descripción del producto</label>
        <input id="inputDescription" class="form-control" type="text" name="description" required>
    </div>
    <div class="mb-4">
        <label class="col-form-label" for="thumbnail">Ingrese la imágen del producto</label>
        <input id="inputUrl" class="form-control" type="text" name="thumbnail" required>
    </div>
    <div class="mt-3 d-grid gap-2">
        <button id="sendProds" class="btn btn-success text-uppercase">enviar</button>
    </div>
</form>
<div class="mt-3 d-grid gap-2">
    <button class="btn btn-primary text-uppercase" onclick="location.href='./products'">ver productos</button>
</div>


